- content_for :page_scripts do
  -# FIXME: change link for asset pipeline
  %script{src: "assets/light_blue/bootstrap-select/dist/js/bootstrap-select.min.js"}
  %script{src: "assets/light_blue/underscore/underscore.js"}
  %script{src: "assets/light_blue/backbone/backbone.js"}
  %script{src: "assets/light_blue/backbone.paginator/lib/backbone.paginator.min.js"}
  %script{src: "assets/light_blue/backgrid/lib/backgrid.min.js"}
  %script{src: "assets/light_blue/backgrid-paginator/backgrid-paginator.js"}
  %script{src: "assets/light_blue/datatables/media/js/jquery.dataTables.min.js"}
  %script{src: "assets/light_blue/tables-dynamic.js"}

.content.container
  %h2.page-title
    User Stars

  %section.widget
    %header
      %h4
        Starred Users

    .body
      %table.table.table-striped.no-margin.mb-sm
        %thead
          %tr
            %th
              id
            %th
              login
            %th
              type

        %tbody
          - @users.each do |user|
            %tr
              %td
                = user.id
              %td
                = image_tag user.avatar_url, class: 'user_avatar'
                = user.login
              %td
                = user.type
